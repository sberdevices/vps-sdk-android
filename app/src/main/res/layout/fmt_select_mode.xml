<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/rgLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbPolytech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Политех" />

        <RadioButton
            android:id="@+id/rbBootcamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Bootcamp" />
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTimerInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ems="15"
        android:hint="Интервал (млс)"
        app:layout_constraintTop_toBottomOf="@+id/rgLocation">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTimerInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="6000"
            android:textAlignment="textStart" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/cbOnlyForce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="ForceLocalization"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilTimerInterval" />

    <CheckBox
        android:id="@+id/cbNeedLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Передавать местоположение"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbOnlyForce" />

    <CheckBox
        android:id="@+id/cbUseNeuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="С помощью нейросети"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbNeedLocation" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начать"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbUseNeuro" />

</androidx.constraintlayout.widget.ConstraintLayout>